{
  "schemaVersion": 1,
  "id": "macecompanion",
  "version": "${version}",
  "name": "Mace Roulette Companion",
  "description": "A quality-of-life mod for the Mace Roulette game on DiamondFire.",
  "authors": ["pixiboot"],
  "contact": {
    "homepage": "https://modrinth.com/project/fXqvpy3I",
    "issues": "https://github.com/real-blahaj/macecompanion/issues",
    "sources": "https://github.com/real-blahaj/macecompanion"
  },
  "license": "LGPL-3.0",
  "icon": "assets/macecompanion/icon.png",
  "environment": "client",
  "entrypoints": {
    "fabric-datagen": [
      "moe.pxe.macecompanion.client.MaceCompanionDataGenerator"
    ],
    "client": [
      "moe.pxe.macecompanion.client.MaceCompanionClient"
    ],
    "main": [
      "moe.pxe.macecompanion.MaceCompanion"
    ],
    "modmenu": [
      "moe.pxe.macecompanion.client.config.ModMenuIntegration"
    ]
  },
  "mixins": [
    "macecompanion.mixins.json",
    {
      "config": "macecompanion.client.mixins.json",
      "environment": "client"
    }
  ],
  "depends": {
    "fabricloader": ">=${loader_version}",
    "fabric-language-kotlin": ">=${kotlin_loader_version}",
    "fabric": "*",
    "minecraft": "${minecraft_version}",
    "yet_another_config_lib_v3": ">=${yacl_version}"
  },
  "custom": {
    "modmenu": {
      "links": {
        "modmenu.modrinth": "https://modrinth.com/project/fXqvpy3I",
        "modmenu.github_releases": "https://github.com/real-blahaj/MaceCompanion/releases",
        "mrc.modmenu.authors_website": "https://pxe.moe"
      }
    }
  }
}
